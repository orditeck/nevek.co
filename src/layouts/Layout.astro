---
import { getThemePreference } from "../components/ThemeToggle/get-theme-preference";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import "./Layout.scss";

interface Props {
  title: string;
  width?: "veryNarrow" | "narrow" | "largeAdaptive" | "normal";
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { title, width = "normal" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={t("site.meta.description")}
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/icon" href="/favicon.ico" />
    <title>{title} | {t("site.html.title")}</title>
  </head>
  <body class={`width-${width}`}>
    <slot />
  </body>
</html>

<script is:inline>
  getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }

    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };

  document.documentElement.dataset.theme = getThemePreference();
</script>
